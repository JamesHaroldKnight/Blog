<div class="Blog">
  <h2><%= @article.title %></h2>
  <p align="center"><%= @article.created_at %></p>

  <div class="well col-xs-8 col-xs-offset-2">
    <h4 class="center blog-description"><strong>Description</strong></h4>
    <hr>
 <!-- Simple Format means that the article will be the same formatting as what was inputted into the database -->
    <p><%= simple_format(@article.description) %></p>
      <div class="article-actions">
        <%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-xs btn-primary" %>
        <%= link_to "Delete this article", article_path(@article), method: :delete, data: {confirm: "Are you sure you want to delete the article?"}, class: "btn btn-xs btn-danger" %>
        <%= link_to "Back to articles page", articles_path, class: "btn btn-xs btn-success" %>
        </div>
  </div>
</div>